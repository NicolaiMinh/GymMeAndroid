        android:roundIcon="@mipmap/icon_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SplashActivity" />
        <activity android:name=".activities.TutorialActivity" />
        <activity android:name=".activities.SettingsActivity" />
        <activity android:name=".activities.AccountActivity" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="63c241de61bfc006809b4389a914004d0f7a2d6b" />

        <activity android:name=".activities.MealDetailActivity" />
